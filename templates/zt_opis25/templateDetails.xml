				<field name="zt_change_color" type="radio" default="1" label="Show change color" description="Show change color in your website.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				
				<field name="color_bd" type="rainbow" default="#f1f1f1" label="Background Body" description="Body" />
				
				<field name="color_zt-colortop" type="rainbow" default="#93c9eb" label="Background Header" description="Background Header" />
				<field name="text_zt-colortop" type="rainbow" default="#095479" label="Header Text" description="Header Text" />
				<field name="link_zt-colortop" type="rainbow" default="#095479" label="Header Link" description="Header Link" />
